# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DEBUG=false
SECRET_KEY=your-secret-key-here-minimum-50-chars-for-production
ALLOWED_HOSTS=*
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# LLM Configuration (REQUIRED - will exit if missing)
# -----------------------------------------------------------------------------
# Text processing LLM
TEXT_LLM_PROVIDER=openai
TEXT_LLM_MODEL=gpt-4o-mini
TEXT_LLM_API_KEY=your-openai-api-key-here
TEXT_LLM_BASE_URL=

# OCR/Image processing LLM
OCR_LLM_PROVIDER=openai
OCR_LLM_MODEL=gpt-4o-mini
OCR_LLM_API_KEY=your-openai-api-key-here
OCR_LLM_BASE_URL=

# LLM Parameters
TEMPERATURE=0.0
REQUEST_TIMEOUT=180
MAX_RETRIES=3
MAX_TOKENS_IN_RESUME_TO_PROCESS=5000

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_JOB_PREFIX=cv:job:
REDIS_JOB_QUEUE=cv_processing_queue
REDIS_CLEANUP_QUEUE=cv_cleanup_queue
REDIS_JOB_TIMEOUT=1800
REDIS_WORKER_TIMEOUT=30
REDIS_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Neo4j Graph Database
# -----------------------------------------------------------------------------
NEO4J_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=secure_default_password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30

# -----------------------------------------------------------------------------
# Qdrant Vector Database
# -----------------------------------------------------------------------------
QDRANT_PORT=6333
QDRANT_COLLECTION=cv_key_points
VECTOR_SIZE=1536
QDRANT_TIMEOUT=30
QDRANT_PREFER_GRPC=true

# -----------------------------------------------------------------------------
# Search Configuration
# -----------------------------------------------------------------------------
DEFAULT_VECTOR_WEIGHT=0.7
DEFAULT_GRAPH_WEIGHT=0.3
CACHE_ENABLED=true
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------
WORKER_STORE_IN_DB=true
WORKER_GENERATE_REVIEW=true
WORKER_CONCURRENT_JOBS=3
JOB_CLEANUP_DELAY_HOURS=24
JOB_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
DURABLE_STORAGE=local
UPLOAD_DIR=/app/uploads
TEMP_DIR=/tmp/cv_uploads
MAX_FILE_SIZE=10485760
MIN_FILE_SIZE=1024

# For S3 storage (set DURABLE_STORAGE=s3)
S3_BUCKET_NAME=
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_ENDPOINT_URL=

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
API_KEY=dev_api_key_16chars_minimum
JWT_SECRET=dev_jwt_secret_key_32_characters_minimum_required
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# CORS (for production)
# -----------------------------------------------------------------------------
# CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com

# -----------------------------------------------------------------------------
# Monitoring (optional)
# -----------------------------------------------------------------------------
# OpenTelemetry Tracing
JAEGER_HOST=jaeger
JAEGER_PORT=6831
TRACING_ENABLED=true
OTEL_SERVICE_NAME=
OTEL_EXPORTER_JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true